	<![endif]-->

	<script>
		jQuery(document).ready(function ($) {
			"use strict";
			$('.contentHolder').perfectScrollbar();
		});
	</script>

	<!-- CHATTER PHOTO UPLOAD DIALOG -->
	<div class="modal fade" id="chatterAvatarComponentUploadDialog" aria-live="assertive" role="dialog" tabindex="-1" aria-labelledby="chatterAvatarComponentUploadDialogLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content sky-form">
				<div class="modal-header">
					<button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
					<h4 id="chatterAvatarComponentUploadDialogLabel" class="modal-title">Upload Profile Photo</h4>
				</div>
				<div class="modal-body">
					<div class="row" id="chatterAvatarComponentUploadDialogContent">
						<h2 id="chatterAvatarComponentUploadDialogHeader"></h2>
						<div id="chatterAvatarComponentUploadDialogInner"></div>
					</div>
				</div>
				<div class="modal-footer" style="display:none;">
					<label style="display:none;" for="chatterAvatarComponentUploadDialogBlurCatch">'&nbsp;'</label>
					<input id="chatterAvatarComponentUploadDialogBlurCatch" style="width:2px;height:2px;position:absolute;border:0;margin:0;padding:0;background:none;outline:none;z-index:-1;cursor:none;" type="text"/>
					<div class="bottomLeft"></div>
				</div>
			  </div>
		</div>
	</div>
	<!-- CHATTER PHOTO UPLOAD DIALOG -->
