<apex:component >
	<apex:includeScript value="/studentcommunity/jslibrary/1418325280000/sfdc/SfdcCore.js" />
	<apex:includeScript value="/studentcommunity/jslibrary/1418325280000/sfdc/NetworksSettings.js" />
	<!-- JS Global Compulsory -->
	<!-- <script type="text/javascript" src="{!$Resource.assets}/plugins/jquery/jquery.min.js"></script> -->
	<apex:includeScript value="{!$Resource.assets}/plugins/jquery/jquery.min.js"/>
	<script type="text/javascript" src="{!$Resource.assets}/plugins/jquery/jquery-migrate.min.js"></script>
	<script type="text/javascript" src="{!$Resource.assets}/plugins/bootstrap/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="{!$Resource.assets}/plugins/back-to-top.js"></script>
	<!-- Scrollbar -->
	<script src="{!$Resource.assets}/plugins/scrollbar/src/jquery.mousewheel.js"></script>
	<script src="{!$Resource.assets}/plugins/scrollbar/src/perfect-scrollbar.js"></script>
	<!-- JS Page Level -->
	<script type="text/javascript" src="{!$Resource.assets}/js/app.js"></script>
	<!-- JS Customization -->
	<script type="text/javascript" src="{!$Resource.assets}/js/custom.js"></script>
	<!-- JS Implementing Plugins -->
	<script type="text/javascript">
		if (!window.sfdcPage && window.GenericSfdcPage) {
			window.sfdcPage = new GenericSfdcPage();
		}
		jQuery(document).ready(function() {
			App.init();
			function chatterAvatarComponentUploadIframeHandler(iDocument) {
				var si = setInterval(function(){ 
					var innerheight = iDocument.find('body').height();
					$('#chatterAvatarComponentUploadDialogContentId').height(innerheight);
					clearInterval(si);
				}, 300);
				
				var stylesArray = [
					"{!$Resource.assets}/plugins/bootstrap/css/bootstrap.min.css",
					"{!$Resource.assets}/css/style.css",
					"{!$Resource.assets}/plugins/line-icons/line-icons.css",
					"{!$Resource.assets}/plugins/font-awesome/css/font-awesome.min.css",
					"{!$Resource.assets}/plugins/scrollbar/src/perfect-scrollbar.css",
					"{!$Resource.assets}/plugins/owl-carousel/owl-carousel/owl.carousel.css",
					"{!$Resource.assets}/plugins/sky-forms/version-2.0.1/css/custom-sky-forms.css",
					"{!$Resource.assets}/css/pages/blog_magazine.css",
					"{!$Resource.assets}/css/pages/page_search.css",
					"{!$Resource.assets}/css/pages/profile.css",
					"{!$Resource.assets}/css/pages/app.css",
					"{!$Resource.assets}/css/theme-colors/default.css",
					"{!$Resource.assets}/css/custom.css"
				];

				$.each(stylesArray, function(i, j) {
					var cssLink = '<link rel="stylesheet" href="{0}"/>'.replace('{0}', j);
					iDocument.find('form').append(cssLink);
				});

				// iDocument.find('body').addClass('container');
				iDocument.find('form[name*="uploadFileForm"]').css('padding-left', '15px');
				iDocument.find('form[name*="uploadFileForm"]').css('padding-right', '15px');

				iDocument.find('._fileSelect').removeClass().addClass('row');
				iDocument.find('form').removeClass().addClass('sky-form');
				iDocument.find('.uploadButtonPanel').find('input[type=button][value=Cancel]').removeClass().addClass('btn-u btn-u-default').on('click', function(){
					$('#chatterAvatarComponentUploadDialog').modal('hide');
				}).removeAttr("onclick");
				$('<span> </span>').insertBefore(iDocument.find('.uploadButtonPanel').find('input[type=button][value=Cancel]'));
				iDocument.find('.uploadButtonPanel').find('.btn').removeClass().addClass('btn-u');
			}
			$(document).on('click', '.chatter-photoupload-pencil-icon', function () {
				$("#chatterAvatarComponentUploadDialogContentId").on("load", function () {
					$('#chatterAvatarComponentUploadDialogContentId').css('height', 'auto');
					$('#chatterAvatarComponentUploadDialog').modal('show');
					chatterAvatarComponentUploadIframeHandler($('#chatterAvatarComponentUploadDialogContentId').contents());
				});
			});
		});
	</script>

	<!--[if lt IE 9]>
		<script src="{!$Resource.assets}/plugins/respond.js"></script>
