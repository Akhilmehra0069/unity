    <fields>
        <help><!-- When selected, Community Users will be allowed to post Comments on a news article as long as the Comment Expiration has not passed. --></help>
        <label><!-- Allow Comments --></label>
        <name>Allow_Comments__c</name>
    </fields>
    <fields>
        <help><!-- Represents the Date/Time when the News Article prevents new comments from being added to the News Article.  The Time is based on the Organizations Time Zone listed in Salesforce. --></help>
        <label><!-- Comment Expiration Date --></label>
        <name>Comment_Expiration_Date__c</name>
    </fields>
    <fields>
        <help><!-- Represents the full text description of the news article that will be displayed in the Community Portal. --></help>
        <label><!-- Content --></label>
        <name>Content__c</name>
    </fields>
    <fields>
        <help><!-- Represents the Date/Time when the News Article will be posted in the Community Portal.  This will be based on the Organizations Time Zone in Salesforce. --></help>
        <label><!-- Entry Date --></label>
        <name>Entry_Date__c</name>
    </fields>
    <fields>
        <help><!-- Represents the Date/Time when the News Article will be removed from the Community Portal.  The time will be based on the Organizations Time Zone in Salesforce. --></help>
        <label><!-- Expiration Date --></label>
        <name>Expiration_Date__c</name>
    </fields>
    <fields>
        <label><!-- Feature on Home Page - Slot # --></label>
        <name>Feature_on_Home_Page_Slot__c</name>
        <picklistValues>
            <masterLabel>1</masterLabel>
            <translation><!-- 1 --></translation>
        </picklistValues>
        <picklistValues>
